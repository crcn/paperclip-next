{
  "name": "paperclip-vscode",
  "displayName": "Paperclip",
  "description": "Live preview for Paperclip (.pc) files",
  "version": "0.1.0",
  "publisher": "paperclip",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:paperclip",
    "onCommand:paperclip.preview"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "paperclip.preview",
        "title": "Paperclip: Open Preview",
        "icon": "$(open-preview)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "paperclip.preview",
          "when": "resourceLangId == paperclip",
          "group": "navigation"
        }
      ]
    },
    "languages": [
      {
        "id": "paperclip",
        "extensions": [
          ".pc"
        ],
        "aliases": [
          "Paperclip",
          "paperclip"
        ]
      }
    ],
    "configuration": {
      "title": "Paperclip",
      "properties": {
        "paperclip.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to paperclip-server binary (auto-detected if empty)"
        },
        "paperclip.serverPort": {
          "type": "number",
          "default": 50051,
          "description": "gRPC server port"
        },
        "paperclip.maxPreviewPanels": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 50,
          "description": "Maximum number of concurrent preview panels"
        },
        "paperclip.previewDebounceMs": {
          "type": "number",
          "default": 100,
          "minimum": 0,
          "maximum": 1000,
          "description": "Debounce delay for preview updates (ms)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.9.0",
    "@grpc/proto-loader": "^0.7.0",
    "@paperclip/proto": "workspace:*"
  }
}
