public component UserList {
    render div {
        style {
            padding: 20px;
            font-family: sans-serif;
        }

        h2 {
            style {
                color: #1f2937;
                margin: 0 0 16px 0;
            }
            text "User List"
        }

        ul {
            style {
                list-style: none;
                padding: 0;
                margin: 0;
            }

            repeat user in users {
                li {
                    style {
                        padding: 12px;
                        margin: 8px 0;
                        background: #f3f4f6;
                        border-radius: 8px;
                        color: #374151;
                    }
                    text user.name
                }
            }
        }
    }
}
